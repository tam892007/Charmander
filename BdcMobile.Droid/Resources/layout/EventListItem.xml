
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ffimageloading.cross.MvxCachedImageView
            android:id="@+id/profileCircleImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src = "res:place.jpg"
            android:padding="10dp"
            local:MvxBind="LoadingPlaceholderImagePath 'res:place.jpg'; ErrorPlaceholderImagePath 'res:boss.svg'; Transformations CircleTransformation; DownsampleWidth DownsampleWidth;ImagePath ImageURL" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profileCircleImageView"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Maria Ozawa visited Vietnam"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_weight="0.7"
                local:MvxBind="Text SurveyNo"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="19 days ago"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_weight="0.3"
                android:gravity="right"
                local:MvxBind="Text TOR"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="At My Dinh Stadium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#5D5C5C"
                android:layout_weight="0.64"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="1"
                local:MvxBind="Text SurveyDescription"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chờ cấp chứng thư"
                android:textSize="12sp"
                android:textColor="#5D5C5C"
                android:layout_weight="0.36"
                android:gravity="right"
                local:MvxBind="Text Status"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>

    <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/lighter_gray" 
            android:layout_below="@+id/profileCircleImageView"/>
    
     
</RelativeLayout>