<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_message_body"
            app:MvxBind="Text Content"
            android:maxWidth="240dp"
            android:text="123"
            android:background="@drawable/rounded_rectangle_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:layout_marginRight="8dp"
            android:layout_gravity="right"
            />
        <FFImageLoading.Cross.MvxCachedImageView
            android:id="@+id/picture_message"
            android:maxWidth="280dp"
            android:maxHeight="140dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/image_place_holder"
            android:background="@android:color/transparent"
            app:MvxBind="Visible IsSinglePicture; ImagePath Files[0].FilePath"
            android:layout_below="@+id/text_message_body"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
        />
    </LinearLayout>
    
    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/container"
        android:layout_alignBottom="@+id/container"
        app:MvxBind="Text Time"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:scaleType="center"
        app:lottie_scale="0.3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:lottie_fileName="sending.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/container"
        />
</RelativeLayout>